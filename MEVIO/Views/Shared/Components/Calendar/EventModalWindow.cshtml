<form enctype="multipart/form-data" action="Calendar">
    <input type="hidden" name="EventId" />

    <div class="contener">
        <div class="divStrockZap2">


            <input name="EventName" class="input-StrockZap2" type="text" placeholder="Нова подiя">
        </div>

        <div class="classPodcherk">
        </div>

        <div class="div-NazCal">
            <img class="imgAVA" src="/img/6a523b423e71ad8b708af55f0f6a0bd5.jpg">
            <p class="nazCalendar">Календар:

            <p id="creatorUsername" class="nazCalendar2"></p>
        </div>

        <div class="Data-Calendat-Time">

            <input id="Date" name="Date" onchange="updateDates()" type="date" class="conData">
            <input type="time" name="time1" id="time1" min="07:00" max="22:00" class="conTime superstyle element-time">
            <div class="classPodcherk2"></div>
            <input type="time" name="time2" id="time2" min="07:00" max="23:00" class="conTime2 superstyle element-time">
            <input id="DateEnd" name="DateEnd" value="" type="date" class="conData2">
            <input class="checkbox2" id="checkbox" onclick="myFunction()" type="checkbox">
            <p class="checkbox">На весь день</p>

        </div>

        <div class="Div-Spov">
            <input type="submit" value="Учасники" class="butonYchas">
            <div class="Div-spov-Icon-Parad">
                <img class="imgCol" src="/img/free-icon-ringing-bell-6816519.png">
                <p class="classSpov">
                    Сповіщати про рішення
                </p>
            </div>
        </div>
        <div class="Scrol-Time">
            <img src="/img/6a523b423e71ad8b708af55f0f6a0bd5.jpg" class="imgAva2">
            <div class="Raz-Line">
                <div class="shedule">
                    <div id="nameEvent" class="day">Субота, Лютий 25</div>

                    <div class="time-span-row">
                        @for (int i = 7; i < 23; i++)
                        {
                            <div>@i-00</div>
                        }
                    </div>

                    <div class="time-span-row time-blocks">
                        <div class="time-change-block"></div>
                        @for (int i = 0; i < 16; i++)
                        {
                            <div class="time-block"></div>
                        }
                    </div>

                    <div class="time-span-row">
                        @for (int i = 0; i < 16; i++)
                        {
                            <div></div>
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="Div-Mesto-Prov">
            <p class="p-Mesto-Prov">Перейти до чату:</p>
            <input type="submit" value="Перейти" asp-action="Chat" asp-controller="Home" class="button-Mesto-Prov">
        </div>
        <div class="Div-Mesto-Prov2">
            <p class="p-Mesto-Prov2">Опис:</p>
            <div class="div-Mesto-Prov2">
                <textarea name="EventDescription" class="textarea-Mesto-Prov2"></textarea>
            </div>
            <input type="submit" value="Редагувати" class="button-Mesto-Prov2">
        </div>
        <div class="div-Button-ST-VD">
            <input type="submit" value="Редагувати" class="button-Stvorutu">
            <input onclick="closeEvent()" type="button" value="Закрити" class="button-Vidminutu">
        </div>
    </div>
</form>